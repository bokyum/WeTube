extends ./layouts/main 

block content
    .form-container
        form(action=`/videos${routes.upload}`, method="post")
            label(for="file") Video File
            input(type="file", id="file", name="file", required = True)
            inpurt(type="text", placeholder="Title", name = "title", required = True)
            textaread(name="description", placeholder="Description", required = True)
            input(type="submit", value = "Upload Video")